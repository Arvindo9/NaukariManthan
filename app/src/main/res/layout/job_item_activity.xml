<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="data"
            type="com.solution.naukarimanthan.ui.jobs_item.JobItemViewModel" />

        <variable
            name="dataBinding"
            type="com.solution.naukarimanthan.utils.BindingUtils" />
    </data>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbarLayout"
        layout="@layout/toolbar_activity"
        bind:dataJobItem="@{data}"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10dp">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:text="@{data.title}"
            android:textSize="@dimen/_18sp"
            android:textColor="@color/grayText"
            tools:text="This is a dummy text description
user to shows the title of nes jobs which are posted by our application.
Thanks you for using this app and hope it will be."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/_10dp">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/posted_date"
                android:textSize="@dimen/_14sp"
                android:textColor="@android:color/holo_green_dark"
                />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/date"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="15 jan 2019"
                android:text="@{data.date}"
                android:textSize="@dimen/_14sp"/>

            <android.support.v7.widget.AppCompatTextView
                android:visibility="gone"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text=" | "
                android:text=" | "
                android:textSize="@dimen/_14sp"/>

            <android.support.v7.widget.AppCompatTextView
                android:visibility="gone"
                android:id="@+id/time"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="11:10 PM"
                android:text="@{data.time}"
                android:textSize="@dimen/_12sp"/>
        </LinearLayout>

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150dp"
            android:id="@+id/image"
            app:imageView="@{data.image}"
            android:background="@drawable/logo"
            android:layout_marginTop="@dimen/_10dp"/>

        <WebView
            android:layout_marginTop="@dimen/_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/webView"
            >

        </WebView>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/viewDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_marginTop="@dimen/_30dp"
            android:text="@string/view_details"
            android:layout_margin="@dimen/_50dp"
            android:onClick="@{() -> data.onViewDetailClick()}"
            />


        <LinearLayout
            android:id="@+id/bannerAd1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
</layout>