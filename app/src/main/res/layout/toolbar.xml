    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="data"
            type="com.solution.naukarimanthan.ui.dashboard.DashboardViewModel" />

        <variable
            name="specialActivityData"
            type="com.solution.naukarimanthan.ui.special_jobs.SpecialJobsViewMode" />


        <variable
            name="dataBinding"
            type="com.solution.naukarimanthan.utils.BindingUtils" />
    </data>

<!--<RelativeLayout-->
