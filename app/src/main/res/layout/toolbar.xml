    <android.support.v7.widget.Toolbar
        app:layout_scrollFlags="scroll|enterAlways"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_arrow_back"
                android:id="@+id/backHome"
                android:visibility="gone"
                />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/logo_small"
                android:id="@+id/homeButton"
                android:onClick="@{() -> data.onHomeButtonClick()}"
                android:layout_toEndOf="@id/backHome"
                android:layout_toRightOf="@id/backHome" />

            <RelativeLayout
                android:layout_toLeftOf="@+id/layoutIcon"
                android:id="@+id/titleLayout"
                android:onClick="@{() -> data.onCategoryClick()}"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/homeButton"
                android:layout_toEndOf="@id/homeButton"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_toStartOf="@+id/layoutIcon">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/categoryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="4dp"
                    android:maxLines="1"
                    android:text="@string/allCategory"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sp" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/subtitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/categoryText"
                    android:text="@{dataBinding.areaLocation}"
                    android:maxLines="1"
                    tools:text="Lucknow, Uttar pardesh"
                    android:textSize="@dimen/_12sp"
                    android:textColor="@color/white"/>

                <android.support.v7.widget.AppCompatTextView
                    android:visibility="gone"
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    style="@style/TextAppearance.AppCompat.SearchResult.Title"
                    tools:text="title"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sp"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layoutIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/notificationIcon"
                    style="@style/TextAppearance.AppCompat.Menu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:elevation="@dimen/_4dp"
                    android:padding="@dimen/_8dp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    app:srcCompat="@drawable/ic_notifications"/>

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/searchIcon"
                    style="@style/TextAppearance.AppCompat.Menu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:elevation="@dimen/_4dp"
                    android:padding="@dimen/_8dp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    app:srcCompat="@drawable/ic_search"/>

                <android.support.v7.widget.AppCompatImageView
                    android:onClick="@{() -> data.onRefreshClick()}"
                    android:id="@+id/refreshIcon"
                    style="@style/TextAppearance.AppCompat.Menu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:elevation="@dimen/_4dp"
                    android:padding="@dimen/_8dp"
                    android:visibility="visible"
                    tools:visibility="visible"
                    app:srcCompat="@drawable/ic_refresh"/>

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="@{dataBinding.progressBarVisibility.get()}"-->
                <!--tools:text="kdfjgkdfg"/>-->

<!--
            <ProgressBar
                android:id="@+id/progressBar"
