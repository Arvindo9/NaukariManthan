                android:background="@drawable/progressbar"
                tools:visibility="visible"
                android:visibility="@{dataBinding.progressBarVisibility ? View.VISIBLE : View.GONE}"
                />
-->

            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>
