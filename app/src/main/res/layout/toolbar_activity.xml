<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="dataJobItem"
            type="com.solution.naukarimanthan.ui.jobs_item.JobItemViewModel" />

        <variable
            name="data"
            type="com.solution.naukarimanthan.ui.category.CategoryViewModel" />

        <variable
            name="dataBinding"
            type="com.solution.naukarimanthan.utils.BindingUtils" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <android.support.v7.widget.Toolbar
            tools:visibility="visible"
        app:layout_scrollFlags="scroll|enterAlways"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--<RelativeLayout-->
                <!--android:id="@+id/titleLayout"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_toRightOf="@id/homeButton"-->
                <!--android:layout_toEndOf="@id/homeButton"-->
                <!--android:layout_marginLeft="@dimen/_10dp"-->
                <!--android:layout_marginStart="@dimen/_10dp">-->
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_arrow_back"
                android:id="@+id/backHome"
                />

                <android.support.v7.widget.AppCompatTextView
                    android:onClick="@{() -> data.onCategoryClick()}"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:id="@+id/title"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:layout_toLeftOf="@+id/iconsLayout"
                    tools:text="@string/app_name"
                    android:text="@string/app_name"
                    style="@style/TextAppearance.AppCompat.SearchResult.Title"
                    android:textColor="@color/white"
                    android:layout_toStartOf="@+id/iconsLayout"
                    android:layout_toRightOf="@id/backHome"
                    android:layout_toEndOf="@id/backHome"
                    android:layout_marginStart="@dimen/_5dp"
                    android:layout_marginLeft="@dimen/_5dp" />
            <!--</RelativeLayout>-->
            <LinearLayout
                android:id="@+id/iconsLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/notificationIcon"
                    style="@style/TextAppearance.AppCompat.Menu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:elevation="@dimen/_4dp"
                    android:padding="@dimen/_8dp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    app:srcCompat="@drawable/ic_notifications"/>

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/searchIcon"
                    style="@style/TextAppearance.AppCompat.Menu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:elevation="@dimen/_4dp"
                    android:padding="@dimen/_8dp"
                    android:onClick="@{() -> dataBinding.onSearchIconOpenClick()}"
                    tools:visibility="visible"
                    app:srcCompat="@drawable/ic_search"/>

                <!--android:visibility="@{dataBinding.searchBarActivityVisibility ? View.GONE : View.VISIBLE}"-->

                <android.support.v7.widget.AppCompatImageView
                    android:onClick="@{() -> data.onRefreshClick()}"
                    android:id="@+id/refreshIcon"
                    style="@style/TextAppearance.AppCompat.Menu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:elevation="@dimen/_4dp"
                    android:padding="@dimen/_8dp"
                    android:visibility="visible"
                    tools:visibility="visible"
                    app:srcCompat="@drawable/ic_refresh"/>

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

        <RelativeLayout
            tools:visibility="gone"
            android:visibility="@{dataBinding.searchBarActivityVisibility ? View.VISIBLE : View.GONE}"
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            android:elevation="@dimen/_4dp"
            android:clickable="true"
            android:gravity="center_vertical">


            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_toStartOf="@+id/clearBtn"
                android:layout_toLeftOf="@+id/clearBtn"
                android:background="@android:color/white"
                android:drawableStart="@drawable/ic_search_gray"
                android:drawableLeft="@drawable/ic_search_gray"
                android:drawablePadding="@dimen/_10dp"
                android:hint="@string/search"
                android:maxLines="1"
                android:padding="@dimen/_10dp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray" />

            <!--android:onClick="@{() -> dataBinding.onSearchIconCloseClick()}"-->
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/clearBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_4dp"
                android:padding="@dimen/_10dp"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_close"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_4dp" />
        </RelativeLayout>
    </RelativeLayout>
</layout>
